{
    "name": "luchianenco/guestbook",
    "description": "Guest Book Code Challenge",
    "type": "project",
    "require": {
        "php": "^7.2",
        "ext-pdo": "*",
        "psr/container": "^1.0",
        "vlucas/phpdotenv": "^2.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpunit/phpunit": "^7.4",
        "roave/security-advisories": "dev-master"
    },
    "license": "private",
    "authors": [
        {
            "name": "Serghei Luchianenco",
            "email": "s@luchianenco.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
}
